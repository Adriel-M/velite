{
  "name": "velite",
  "version": "0.0.0",
  "description": "turns your creative content into data layer",
  "keywords": [
    "content",
    "contentful",
    "contentlayer",
    "headless-cms",
    "data-layer",
    "generator",
    "creative",
    "velite",
    "cli",
    "zce"
  ],
  "repository": "zce/velite",
  "license": "MIT",
  "author": "zce <w@zce.me> (https://zce.me)",
  "types": "./dist/index.d.ts",
  "bin": "./dist/cli.js",
  "exports": "./dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/cli.ts"
    ],
    "clean": true,
    "minify": false,
    "splitting": true,
    "format": "esm",
    "target": "node18",
    "dts": {
      "entry": "src/index.ts",
      "resolve": true
    }
  },
  "renovate": {
    "extends": [
      "zce"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "printWidth": 180,
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports"
    ]
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "latest",
    "@types/node": "latest",
    "cac": "latest",
    "fast-glob": "latest",
    "ora": "latest",
    "to-vfile": "latest",
    "tsup": "latest",
    "typescript": "latest",
    "hast-util-from-html": "latest",
    "hast-util-raw": "latest",
    "hast-util-to-html": "latest",
    "mdast-util-from-markdown": "latest",
    "mdast-util-gfm": "latest",
    "mdast-util-to-hast": "latest",
    "mdast-util-to-markdown": "latest",
    "micromark-extension-gfm": "latest",
    "prettier": "latest",
    "tsx": "latest",
    "unist-util-visit": "latest",
    "vfile": "latest",
    "vfile-matter": "latest",
    "yaml": "latest"
  },
  "peerDependencies": {
    "sharp": "latest"
  },
  "engines": {
    "node": ">=18"
  }
}
